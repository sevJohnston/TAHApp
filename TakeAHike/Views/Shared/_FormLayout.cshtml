<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>@ViewData["Title"] - TakeAHike</title>
</head>
<body>
    <nav class="navbar navbar-inverse ">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">OregonHikes</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Hikes">Hikes</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="AddHike">Add a Hike</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Resources">Resources</a></li>
                    <li><a asp-area="" asp-controller="Admin" asp-action="Index">Admin</a></li>
                    <li><a asp-area="" asp-controller="Account" asp-action="Login">Logout</a></li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="panel panel-success">
            <div class="panel-heading text-center"><h3>@ViewData["Title"] Form</h3></div>
            <div class="panel-body">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2020 - Take A Hike</p>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>
